<h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
 <div id="error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <ul>
        <li>Title can't be blank</li>
        <li>Body can't be blank</li>
    </ul>
</div>
<div class="field">
    <div class="error_field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
    </div>
</div>
<div class="field">
    <div class="error_field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
    </div>
</div>

<% else %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <% end %>

  <% end %>