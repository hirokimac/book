<html>
<body>
  <h1>Books</h1>
  <table class="clearfix">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book) %>
        </td>
        <td>
          <%= link_to "destroy", destroy_book_path(book.id), method: :delete,  "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
  <!-- form_for部分 -->
  <%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
 <div id="error_explanation">
    <h2>2 errors prohibited this book from being saved:</h2>
    <ul>
        <li>Title can't be blank</li>
        <li>Body can't be blank</li>
    </ul>
</div>
<div class="field">
    <div class="error_field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
    </div>
</div>
<div class="field">
    <div class="error_field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
    </div>
</div>

<% else %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>

  <% end %>

</body>

</html>